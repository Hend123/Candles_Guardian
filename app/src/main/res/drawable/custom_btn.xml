<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:right="5dp"
        android:top="5dp">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/gray_" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:angle="180"
                android:endColor="@color/blueBerry_700"
                android:startColor="@color/teal_200" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>


</layer-list>

